<% include loginHeader.ejs %>
<legend><h2>用户登陆</h2></legend>
<% if(typeof(message) != "undefined" && message!=null) { %>
<div class="alert alert-error">
    <%= message %>
</div>
<% } %>
<p>Welcome to <%= title %></p>
<div class="container-fluid">
    <form action="/login" method="post">
        <fieldset>
            <div class="well" >
                <div style="margin: 0 auto;width: 400px">
                    <div class="control-group">
                        <label class="control-label" for="username">用户名：</label>
                        <div class="controls">
                            <input placeholder="输入用户名" style="height: 30px" class="input-xlarge" type="text" id="username" name="username">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="pwd">密码：</label>
                        <div class="controls"><input placeholder="输入密码" style="height: 30px" class="input-xlarge" type="password" id="password" name="password"></div>
                    </div>
                    <div class="form-actions">
                        <input class="btn btn-primary" type="submit" value="登录">
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>
<% include loginFooter.ejs %>


