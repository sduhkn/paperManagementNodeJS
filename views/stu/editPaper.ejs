<div ng-controller="editPaperInfo" style="text-align: center">
    <div class="container">
        <div class="row">
            <div class="col-xs-1">
                论文题目:
            </div>
            <div class="col-xs-2">
                <input type="text" class="form-control" ng-model="paper.title">
            </div>
            <div class="col-xs-1">
                发表日期:
            </div>
            <div class="col-xs-2 ">
                <input type="date" class="form-control" ng-model="paper.pubdate | date:'yyyy/MM/dd' ">
            </div>

        </div>
            <p>{{ paper.title }}</p>
            <p>{{ paper.pubdate }}</p>
            <p>{{ paper.publish }}</p>
    </div>
</div>